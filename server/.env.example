PORT=4000
TOYHOUSE_CLIENT_ID=your_client_id_here
TOYHOUSE_CLIENT_SECRET=your_client_secret_here

# These endpoints can be filled from the Toyhou developer docs if provided;
# if Toyhou uses standard OAuth2 endpoints, set:
TOYHOUSE_AUTH_URL=https://toyhou.se/~developer/oauth/authorize
TOYHOUSE_TOKEN_URL=https://toyhou.se/~developer/oauth/token
# If Toyhou provides a user-info endpoint, put it here:
TOYHOUSE_USERINFO_URL=https://toyhou.se/~developer/oauth/userinfo

# Your public site URL to return to after login (GitHub Pages)
FRONTEND_ORIGIN=https://YOUR_GITHUB_USERNAME.github.io
# The backend's public base URL (where you'll deploy this server)
BACKEND_BASE_URL=https://your-backend.example.com
SESSION_SECRET=a-long-random-string

